{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-wakatime",
  "repository": {
    "type": "git",
    "url": "https://github.com/angristan/opencode-wakatime.git"
  },
  "version": "1.0.1",
  "description": "WakaTime plugin for OpenCode - Track AI coding activity and time spent",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "opencode-wakatime": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --external:@opencode-ai/plugin --outfile=dist/bundle.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opencode",
    "wakatime",
    "time-tracking",
    "ai",
    "coding",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@opencode-ai/plugin": "^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {}
}
